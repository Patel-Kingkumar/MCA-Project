@model DataAccessLayer.Borrowings

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .col-md-4 {
        position: absolute;
        top: 40%;
        left: 50%;
        border: 1px solid;
        border-color: lightslategray;
        transform: translate(-50%,-50%);
        box-shadow: 5px 10px 25px #888888;
        background-color: #f7fcfc;
    }

</style>


<div class="row">
    <div class="col-md-4">
        <h2 style="text-align: center; margin-top: 5px">Submit Borrow Book</h2>        
        <hr />
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <input type="hidden" asp-for="BookId" value="@Model.BookId" />

            <input type="hidden" asp-for="StudentId" value="@Model.StudentId" />

            <div class="form-group">
                <label asp-for="RetriveDate" class="control-label"></label>
                <input value="@Html.DisplayFor(model => model.RetriveDate)" class="form-control" style="background-color: white;" disabled />
                <span asp-validation-for="RetriveDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input value="@Html.DisplayFor(model => model.DueDate)" class="form-control" style="background-color:white;" disabled />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmitDate" class="control-label"></label>
                <input id="SubmitDate" asp-for="SubmitDate" class="form-control" style="background-color:white;" readonly/>
                <span asp-validation-for="SubmitDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Submit Book" class="btn btn-primary" />
            </div>
        </form>
        @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@
    </div>
</div>

<script>
    document.getElementById('SubmitDate').value = new Date().toISOString().slice(0, 10);
</script>