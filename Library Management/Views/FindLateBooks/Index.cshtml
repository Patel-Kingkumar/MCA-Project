@model IEnumerable<DataAccessLayer.Borrowings>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}
<h2>Index</h2>
@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RetriveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                Late Days
            </th>
            <th>
                Fine
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.SubmitDate > item.DueDate)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RetriveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookName)
            </td>
            <td style="text-align:center">
                @Math.Abs(Convert.ToInt32((item.DueDate - item.SubmitDate).Days))
            </td>
            <td>
                @{
                    var fine = Math.Abs(Convert.ToInt32((item.DueDate - item.SubmitDate).Days)) * 100;
                }
                @fine
                <span id="result"></span>
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id"><i class='far fa-edit m-1' style='font-size:25px'></i></a>
            <a asp-action="Details" asp-route-id="@item.Id"><i class='far fa-list-alt m-1' style='font-size:25px'></i></a>
            <a asp-action="Delete" asp-route-id="@item.Id"><i class='far fa-trash-alt m-1' style='font-size:25px'></i></a>*@
            </td>
        </tr>
                }
          }
    </tbody>
</table>